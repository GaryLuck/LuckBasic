Function Eval_rpn(rpn as string) as string

  buff = rpn
  dim tok as string
  
  clearstack()
  tok = gettok()
  
  if tok = "~" then
    Eval_rpn = "0"
    exit function
  end if
  
  do while tok<> "~"
'     console_writeline("Doing tok "+tok)
      process_tok(tok)
    tok = gettok()
  loop
  
  dim r as string
  r = mypop()
'  console_writeline("result is "+r)
  Eval_rpn = format$(r)
  
  End Function
  
  

